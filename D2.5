public int[] repeatedNumber(final int[] A) {
    int n = A.length;
    int[] result = new int[2];

    for (int i = 0; i < n; i++) {
        int absValue = Math.abs(A[i]);
        if (A[absValue - 1] > 0) {
            A[absValue - 1] *= -1;
        } else {
            result[0] = absValue;
        }
    }

    for (int i = 0; i < n; i++) {
        if (A[i] > 0) {
            result[1] = i + 1;
            break;
        }
    }

    return result;
}
